@model SistemaTienda.Models.Vehiculo

@{
    ViewData["Title"] = "Crear Vehículo";
}

<!-- Fuente tipo cartel -->
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

<style>
    .font-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 1px;
    }

    .form-container {
        background-color: #f9f9f9;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 800px;
        margin: auto;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.07);
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-dark {
        font-weight: 500;
        padding: 10px 25px;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center display-4 text-black font-title mb-4">Registrar Vehículo</h1>

    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Marca -->
            <div class="mb-3">
                <label asp-for="Marca" class="form-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <!-- Modelo -->
            <div class="mb-3">
                <label asp-for="Modelo" class="form-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <!-- Año -->
            <div class="mb-3">
                <label asp-for="Anio" class="form-label"></label>
                <input asp-for="Anio" class="form-control" />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>

            <!-- Kilometraje -->
            <div class="mb-3">
                <label asp-for="Kilometraje" class="form-label"></label>
                <input asp-for="Kilometraje" class="form-control" />
                <span asp-validation-for="Kilometraje" class="text-danger"></span>
            </div>

            <!-- Precio por Día -->
            <div class="mb-3">
                <label asp-for="PrecioPorDia" class="form-label"></label>
                <input asp-for="PrecioPorDia" class="form-control" placeholder="Ej: 55.50 o 55,50" />
                <span asp-validation-for="PrecioPorDia" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="Disponible">Disponible</option>
                    <option value="En Mantenimiento">En Mantenimiento</option>
                    <option value="Rentado">Rentado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- Imagen -->
            <div class="mb-4">
                <label asp-for="UrlImagen" class="form-label">Imagen del Vehículo</label>
                <input type="file" name="archivos" class="form-control" />
                <span asp-validation-for="UrlImagen" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver
                </a>
                <button type="submit" class="btn btn-dark">
                    <i class="fas fa-plus me-2"></i> Crear Vehículo
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('form').addEventListener('submit', function () {
            const precio = document.querySelector("input[name='PrecioPorDia']");
            if (precio) {
                precio.value = precio.value.replace(',', '.');
            }
        });
    </script>
}