@{
    ViewData["Title"] = "Rentas Registradas";
}

<!-- Fuente tipo cartel -->
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

<style>
    .font-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 1px;
    }
</style>

<div class="container mt-5">

    <!-- Título + botón crear -->
    <div class="row align-items-center justify-content-between mb-4">
        <div class="col-md-6">
            <h1 class="display-3 fw-bolder text-black font-title mb-0">
                Lista de Rentas
            </h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-dark text-white px-4 py-2 shadow">
                <i class="fas fa-plus me-2"></i> Nueva Renta
            </a>
        </div>
    </div>

    <!-- Tabla de rentas -->
    <div class="table-responsive shadow-sm">
        <table id="tblRentas" class="table table-bordered table-striped align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Cliente</th>
                    <th>Vehículo</th>
                    <th>Inicio</th>
                    <th>Fin</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Admin/renta.js"></script>
}
